<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <PackageId>Iridio.Runtime</PackageId>
    <Authors>SuperJMN</Authors>
    <Product>Iridio</Product>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>Icon.png</PackageIcon>
    <Description>Simple runtime for the Iridio language.</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CSharpFunctionalExtensions" Version="2.24.3" />
    <PackageReference Include="DumpExtensions" Version="2.0.0" />
    <PackageReference Include="morelinq" Version="3.3.2" />
    <PackageReference Include="Zafiro.Core" Version="3.0.2" />
    <PackageReference Include="Zafiro.Reflection" Version="3.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Iridio\Iridio.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\Artwork\Icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>